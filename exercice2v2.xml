<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80E30D"
        android:text="Travel App"
        android:textColor="#FAEDED"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/natur" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="102dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Overview"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="126dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Gallery"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Review"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numStars="4"
            android:rating="3" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="16dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:text="4,4 (2532 views)"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:text="WHY GO NOW ? Csb thnoughs a see of clouds"
        android:textColor="#0B0A0A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="$520 ( 5days )"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#80E30D"
            android:text="BOOK NOW" />
    </LinearLayout>

</LinearLayout>